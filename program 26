#include<iostream>
using namespace std;

int main(){
int n;
cout<<"enter the number u want :";
cin>>n;

int i=1;
int s=n;
while(i<=n)
{
    // First Triangle
    int j=n;
    while (j>=i)
    {
        cout<<n-j+1;
        j--;
    }

    // Second Triangle
    // if(i>1);
    // for(int p=1;p<=2*(i-1);p++)
    // {
    //     cout<<"*";
    // }
    
    int p=1;
    while(p<=2*(i-1))
    {
        cout<<"*";
        p++;
    }
    
    // Third Triangle
    j=s;
    while(j>=1)
    {
        cout<<j;
        j--;
    }
    cout<<endl;
    s--;
    i++;
}
}
